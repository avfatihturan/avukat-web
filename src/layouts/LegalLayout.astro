---
import BaseLayout from './BaseLayout.astro';
import Hero from '../components/Hero.astro';

interface Props {
  title: string;
  description: string;
  canonicalUrl: string;
  heroTitle: string;
}

const { title, description, canonicalUrl, heroTitle } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  currentPage=""
  canonicalUrl={canonicalUrl}
>
  <Hero title={heroTitle} size="sm" />

  <section class="bg-light">
    <div class="container legal-container">
      <div class="legal-text">
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
