---
import { getCollection, render } from 'astro:content';
import LegalLayout from '../../layouts/LegalLayout.astro';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const legalPages = await getCollection('legal');
  return legalPages.map((page) => ({
    params: { slug: page.id },
    props: { page },
  }));
}

// ✅ HATA ÇÖZÜMÜ: Props tipi tanımlandı
type Props = {
  page: CollectionEntry<'legal'>;
};

const { page } = Astro.props;

const { Content } = await render(page);

const metaTitle = page.data.title ?? 'Yasal Metin';
const metaDesc = page.data.description ?? 'Hukuki bilgilendirme metni.';
---

<LegalLayout 
  title={metaTitle} 
  description={metaDesc} 
  currentPage="kurumsal"
>
  <Content />
</LegalLayout>