---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import AreaCard from '../components/AreaCard.astro';
import { getEntry } from 'astro:content';

// YOL B: Site verisi "site" koleksiyonundan "main" entry'si ile çekilir
const siteEntry = await getEntry('site', 'main');

// work-areas hâlâ "data" koleksiyonunda (dokunmuyoruz)
const workAreasEntry = await getEntry('data', 'work-areas');

if (!siteEntry) throw new Error("Site verisi bulunamadı.");

// workAreasEntry boşsa boş dizi
const workAreas = workAreasEntry ? (workAreasEntry.data as any[]) : [];

// Yol B: main.json tek obje olduğu için direkt erişilir
const { name } = siteEntry.data as any;
---

<BaseLayout
  title={`Çalışma Alanları | ${name}`}
  description={`${name}'ın uzmanlık alanları.`}
  currentPage="calisma-alanlari"
  canonicalUrl="/calisma-alanlari"
>
  <Hero 
    title="Çalışma Alanları" 
    size="sm" 
    image="/images/banner-work.webp"
  />

  <section class="page-section">
    <div class="container">
      
      <div class="grid-layout">
        {workAreas.map((area) => (
          <AreaCard
            icon={area.icon}
            title={area.title}
            description={area.description}
            ctaText={area.ctaText}
            ctaLink={area.ctaLink}
          />
        ))}
      </div>

      <div class="bottom-box-wrapper">
        <a href="/iletisim" class="bottom-box-link">
          <div class="bottom-box">
            
            <div class="box-content">
              <h3 class="box-title">Genel Hukuki Danışmanlık</h3>
              <p class="box-desc">
                Bireysel ve kurumsal müvekkillere, tekil dosyalarla sınırlı olmayan sürdürülebilir bir hukuki danışmanlık sunulur. Amaç, mevcut sorunların ötesinde hukuki riskleri önceden tespit ederek sürekli bir güvenlik sağlamaktır.
              </p>
            </div>

            <div class="box-action">
              <span class="btn-custom">Hukuki Destek İçin Bize Ulaşın →</span>
            </div>

          </div>
        </a>
      </div>

    </div>
  </section>
</BaseLayout>

<style>
  .page-section { padding: 4rem 0; background-color: var(--color-bg); }
  
  .grid-layout { display: grid; grid-template-columns: 1fr; gap: 2rem; }
  @media (min-width: 768px) { .grid-layout { grid-template-columns: repeat(2, 1fr); } }
  @media (min-width: 1024px) { .grid-layout { grid-template-columns: repeat(3, 1fr); } }
</style>