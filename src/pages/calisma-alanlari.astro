---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import AreaCard from '../components/AreaCard.astro';
import { getEntry, getCollection } from 'astro:content';

const siteEntry = await getEntry('site', 'main');

if (!siteEntry) {
  throw new Error("Site verisi bulunamadı.");
}

const workAreas = await getCollection('workAreas');
const { name } = siteEntry.data;
---

<BaseLayout
  title={`Çalışma Alanları | ${name}`}
  description={`${name}'ın uzmanlık alanları.`}
  currentPage="calisma-alanlari"
  canonicalUrl="/calisma-alanlari"
>
  <Hero title="Çalışma Alanları" size="sm" />

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {workAreas.map((area) => (
          <AreaCard
            icon={area.data.icon}
            title={area.data.title}
            description={area.data.description}
            ctaText={area.data.ctaText}
            ctaLink={area.data.ctaLink}
          />
        ))}
      </div>

      <div class="mt-12">
        <a href="/iletisim" class="block group">
          <div class="bg-white rounded-lg p-8 shadow-sm transition-all hover:shadow-md hover:-translate-y-1 flex flex-col md:flex-row items-center justify-between gap-8" style="border: 1px solid #E5E7EB;">
            
            <div class="w-full">
              <h3 class="text-xl font-bold text-[#1C1C1C] mb-3 text-center md:text-left">Genel Hukuki Danışmanlık</h3>
              
              <p class="text-[#333333] leading-relaxed" style="text-align: justify;">
                Bireysel ve kurumsal müvekkillere, tekil dosyalarla sınırlı olmayan sürdürülebilir bir hukuki iş ortaklığı sunulmaktadır. Amaç, yalnızca mevcut sorunları çözmek değil; hukuki riskleri henüz doğmadan tespit ederek kapsamlı ve sürekli bir hukuki güvenlik sağlamaktır.
              </p>
            </div>

            <div class="flex-shrink-0">
              <span class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md text-white bg-[#002B5B] hover:bg-opacity-90 transition-colors">
                Hukuki Destek İçin Bize Ulaşın →
              </span>
            </div>

          </div>
        </a>
      </div>

    </div>
  </section>
</BaseLayout>