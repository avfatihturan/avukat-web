---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import AreaCard from '../components/AreaCard.astro';
import { getEntry, getCollection } from 'astro:content';

const siteEntry = await getEntry('site', 'main');

if (!siteEntry) {
  throw new Error("Site verisi bulunamadı.");
}

const workAreas = await getCollection('workAreas');
const { name } = siteEntry.data;
---

<BaseLayout
  title={`Çalışma Alanları | ${name}`}
  description={`${name}'ın uzmanlık alanları.`}
  currentPage="calisma-alanlari"
  canonicalUrl="/calisma-alanlari"
>
  <Hero title="Çalışma Alanları" size="sm" />

  <section class="page-section">
    <div class="container-custom">
      
      <div class="grid-layout">
        {workAreas.map((area) => (
          <AreaCard
            icon={area.data.icon}
            title={area.data.title}
            description={area.data.description}
            ctaText={area.data.ctaText}
            ctaLink={area.data.ctaLink}
          />
        ))}
      </div>

      <div class="bottom-box-wrapper">
        <a href="/iletisim" class="bottom-box-link">
          <div class="bottom-box">
            
            <div class="box-content">
              <h3 class="box-title">Genel Hukuki Danışmanlık</h3>
              <p class="box-desc">
                Bireysel ve kurumsal müvekkillere, tekil dosyalarla sınırlı olmayan sürdürülebilir bir hukuki danışmanlık sunulur. Amaç, mevcut sorunların ötesinde hukuki riskleri önceden tespit ederek sürekli bir güvenlik sağlamaktır.
              </p>
            </div>

            <div class="box-action">
              <span class="btn-custom">Hukuki Destek İçin Bize Ulaşın →</span>
            </div>

          </div>
        </a>
      </div>

    </div>
  </section>
</BaseLayout>

<style>
  /* STİLLER AYNI KALDI (Daha önce yaptığımız manuel CSS) */
  .page-section { padding: 4rem 0; background-color: #ffffff; }
  .container-custom { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }
  .grid-layout { display: grid; grid-template-columns: 1fr; gap: 2rem; }
  @media (min-width: 768px) { .grid-layout { grid-template-columns: repeat(2, 1fr); } }
  @media (min-width: 1024px) { .grid-layout { grid-template-columns: repeat(3, 1fr); } }

  .bottom-box-wrapper { margin-top: 3rem; }
  .bottom-box-link { text-decoration: none; display: block; }
  .bottom-box {
    background-color: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    display: flex; flex-direction: column; align-items: center; gap: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }
  .bottom-box:hover { transform: translateY(-5px); box-shadow: 0 10px 15px rgba(0,0,0,0.1); }
  @media (min-width: 768px) { .bottom-box { flex-direction: row; text-align: left; justify-content: space-between; } }
  
  .box-title { font-size: 1.25rem; font-weight: 700; color: #111; margin-bottom: 1rem; text-align: center; }
  @media (min-width: 768px) { .box-title { text-align: left; } }
  
  .box-desc { color: #444; line-height: 1.6; text-align: justify; max-width: 800px; }
  .btn-custom { display: inline-block; background-color: #002B5B; color: white; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; white-space: nowrap; }
</style>