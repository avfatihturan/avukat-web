---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ArticleCard from '../components/ArticleCard.astro';
import AreaCard from '../components/AreaCard.astro';

// Site verisini çekiyoruz
const siteEntry = await getEntry('site', 'main');

// HATA ÇÖZÜMÜ: Kesin kontrol
if (!siteEntry) {
  throw new Error("Site verisi (site.json) bulunamadı.");
}

const { contact } = siteEntry.data;

// Çalışma alanlarını çekiyoruz
const workAreas = await getCollection('workAreas');

// Son 3 yazıyı çekiyoruz
const allArticles = await getCollection('articles', ({ data }) => !data.draft);
const articles = allArticles
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Av. Fatih Turan | Ankara Hukuk ve Danışmanlık"
  description="Ankara merkezli Av. Fatih Turan ile Ceza, Şirketler, İş ve Kira Hukuku alanlarında stratejik ve güvenilir hukuki danışmanlık hizmeti alın."
  currentPage="home"
  canonicalUrl="/"
>
  <Hero
    title="Stratejik Hukuk.<br>Güvenilir Temsil."
    subtitle="&quot;Hangi limana gideceğini bilmeyen gemiye, hiçbir rüzgar yardım edemez.&quot; — Seneca"
    showCTA
  />

  <section class="home-work-section">
    <div class="container">
      <h2 class="section-heading section-heading--center mb-12">Çalışma Alanları</h2>
      
      <div class="grid-layout">
        {workAreas.map((area) => (
          <AreaCard
            icon={area.data.icon || 'fa-solid fa-gavel'}
            title={area.data.title || ''}
            description={area.data.description || ''}
            ctaText={area.data.ctaText}
            ctaLink={area.data.ctaLink}
          />
        ))}
      </div>

      <div class="bottom-box-wrapper">
        <a href="/iletisim" class="bottom-box-link">
          <div class="bottom-box">
            
            <div class="box-content">
              <h3 class="box-title">Genel Hukuki Danışmanlık</h3>
              <p class="box-desc">
                Bireysel ve kurumsal müvekkillere, tekil dosyalarla sınırlı olmayan sürdürülebilir bir hukuki danışmanlık sunulur. Amaç, mevcut sorunların ötesinde hukuki riskleri önceden tespit ederek sürekli bir güvenlik sağlamaktır.
              </p>
            </div>

            <div class="box-action">
              <span class="btn-custom">Hukuki Destek İçin Bize Ulaşın →</span>
            </div>

          </div>
        </a>
      </div>

    </div>
  </section>

  <section class="latest-articles-section">
    <div class="container">
      <h2 class="section-heading section-heading--center">Son Yayınlar</h2>
      <div class="grid-3">
        {articles.map((article) => (
          <ArticleCard
            title={article.data.title}
            description={article.data.description}
            href={`/yayinlar/${article.id}`}
            image={article.data.heroImage}
            tag={article.data.tag || ''} 
          />
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <h2>Hukuki Destek Almak İster misiniz?</h2>
      <p>Sorularınız için iletişime geçebilir veya randevu talep edebilirsiniz.</p>
      <div class="cta-buttons">
        <a href="/iletisim" class="btn">
          <i class="fa-solid fa-calendar"></i> Randevu Al
        </a>
        <a href={contact.phoneLink || '#'} class="btn-outline-main">
          <i class="fa-solid fa-phone"></i> Hemen Ara
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* GENEL STİLLER */
  .section-heading--center { text-align: center; display: block; }
  .section-heading--center::after { margin: 10px auto 0; }
  
  /* --- ÇALIŞMA ALANLARI İÇİN ÖZEL STİLLER (Manuel CSS) --- */
  .home-work-section {
    padding: 5rem 0;
    background-color: #f9fafb; /* Hafif gri zemin ile ayrışsın */
  }

  /* Grid Yapısı */
  .grid-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 3rem;
  }
  @media (min-width: 768px) {
    .grid-layout { grid-template-columns: repeat(2, 1fr); }
  }
  @media (min-width: 1024px) {
    .grid-layout { grid-template-columns: repeat(3, 1fr); }
  }

  /* Alt Geniş Kutu Stilleri */
  .bottom-box-wrapper { margin-top: 3rem; }
  .bottom-box-link { text-decoration: none; display: block; }
  
  .bottom-box {
    background-color: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .bottom-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0,0,0,0.1);
  }

  @media (min-width: 768px) {
    .bottom-box {
      flex-direction: row;
      text-align: left;
      justify-content: space-between;
    }
  }

  .box-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111;
    margin-bottom: 0.5rem;
    text-align: center;
  }
  @media (min-width: 768px) { .box-title { text-align: left; } }

  .box-desc {
    color: #444;
    line-height: 1.6;
    text-align: justify;
    max-width: 750px;
    margin: 0;
  }

  .btn-custom {
    display: inline-block;
    background-color: #002B5B;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    white-space: nowrap;
  }

  /* --- DİĞER BÖLÜMLER --- */
  .latest-articles-section { padding: 5rem 0; }

  /* CTA Bölümü Stilleri */
  .cta-section { background: var(--color-bg-secondary); text-align: center; padding: 60px 0; border-top: 1px solid var(--color-border); }
  .cta-section h2 { color: var(--brand-primary); margin-bottom: 15px; }
  :global(html.dark) .cta-section h2 { color: var(--color-text); }
  .cta-section h2::after { display: none; }
  .cta-section p { color: var(--color-text-secondary); margin-bottom: 25px; font-size: 1.1rem; }
  .cta-buttons { display: flex; gap: 15px; justify-content: center; flex-wrap: wrap; }
  .cta-buttons .btn, .cta-buttons .btn-outline-main { width: 180px; display: inline-flex; align-items: center; justify-content: center; gap: 8px; padding: 14px 24px; font-size: 0.85rem; margin-top: 0; }
  .cta-buttons .btn:hover { background: var(--brand-primary); color: #fff; transform: none; }
  :global(html.dark) .cta-buttons .btn:hover { background: var(--brand-accent); color: var(--brand-primary); }
</style>