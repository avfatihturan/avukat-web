---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  href: string;
  image: ImageMetadata;
  tag: string;
}

const { title, description, href, image, tag } = Astro.props;
---

<article class="article-card">
  <a href={href}>
    <Image src={image} alt={title} width={400} height={220} loading="lazy" />
    <div class="article-card__content">
      <span class="article-tag">{tag}</span>
      <h3>{title}</h3>
      <p>{description}</p>
      <span class="article-link">Ä°ncele &rarr;</span>
    </div>
  </a>
</article>

<style>
  .article-card {
    background: var(--card-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .article-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .article-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }

  .article-card__content {
    padding: 25px;
  }

  .article-card h3 {
    margin: 10px 0;
    font-size: 1.2rem;
    color: var(--brand-primary);
  }
  :global(html.dark) .article-card h3 {
    color: var(--color-text);
  }

  .article-card p {
    margin-bottom: 20px;
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .article-tag {
    display: inline-block;
    background: var(--brand-accent);
    color: #000;
    padding: 4px 12px;
    border-radius: 3px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .article-link {
    display: inline-block;
    color: var(--brand-primary);
    font-weight: 600;
    transition: color 0.2s ease;
  }
  :global(html.dark) .article-link {
    color: var(--color-text);
  }

  .article-card:hover .article-link {
    color: var(--brand-accent);
  }
</style>
