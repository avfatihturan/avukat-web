---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  href: string;
  image: ImageMetadata;
  tag: string;
}

const { title, description, href, image, tag } = Astro.props;
---

<article class="blog-card">
  <a href={href} class="blog-card__link">
    <!-- Image Container -->
    <div class="blog-card__image-wrapper">
      <Image
        src={image}
        alt={title}
        width={400}
        height={240}
        loading="lazy"
        class="blog-card__image"
      />
      <div class="blog-card__image-overlay"></div>
      <span class="blog-card__tag">{tag}</span>
    </div>

    <!-- Content -->
    <div class="blog-card__content">
      <h3 class="blog-card__title">{title}</h3>
      <p class="blog-card__description">{description}</p>

      <div class="blog-card__footer">
        <span class="blog-card__read-more">
          Devamını Oku
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    position: relative;
    background: var(--card-bg);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .blog-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  /* Image Section */
  .blog-card__image-wrapper {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .blog-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-card__image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      transparent 50%,
      rgba(0, 40, 85, 0.1) 100%
    );
    pointer-events: none;
  }

  .blog-card__tag {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 6px 14px;
    background: var(--brand-accent);
    color: #000;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    border-radius: 6px;
  }

  /* Content Section */
  .blog-card__content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 24px;
  }

  .blog-card__title {
    margin: 0 0 12px;
    font-size: 1.15rem;
    font-weight: 700;
    line-height: 1.4;
    color: var(--brand-primary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  :global(html.dark) .blog-card__title {
    color: var(--color-text);
  }

  .blog-card__description {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  /* Footer */
  .blog-card__footer {
    margin-top: 20px;
    padding-top: 16px;
    border-top: 1px solid var(--color-border);
  }

  .blog-card__read-more {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--brand-primary);
  }
  :global(html.dark) .blog-card__read-more {
    color: var(--brand-accent);
  }

  .blog-card__read-more svg {
    width: 16px;
    height: 16px;
  }

  /* Mobile Optimizations */
  @media (max-width: 768px) {
    .blog-card {
      border-radius: 12px;
    }
    .blog-card__content {
      padding: 20px;
    }
    .blog-card__title {
      font-size: 1.05rem;
      margin-bottom: 10px;
    }
    .blog-card__description {
      font-size: 0.85rem;
    }
    .blog-card__tag {
      top: 12px;
      left: 12px;
      padding: 5px 12px;
      font-size: 0.65rem;
    }
    .blog-card__footer {
      margin-top: 16px;
      padding-top: 14px;
    }
    .blog-card__read-more {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 640px) {
    .blog-card__content {
      padding: 16px;
    }
    .blog-card__title {
      font-size: 1rem;
    }
  }
</style>
