<button id="themeToggle" class="theme-toggle" aria-label="Tema değiştir">
  <i class="fa-solid fa-moon sun-icon"></i>
  <i class="fa-solid fa-sun moon-icon"></i>
</button>

<style>
  .theme-toggle {
    background: none;
    border: 1px solid var(--color-border-soft);
    border-radius: 50%;
    width: 35px;
    height: 35px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-text);
    transition: 0.2s;
  }

  .theme-toggle:hover {
    background: var(--brand-accent);
    color: #fff;
    border-color: var(--brand-accent);
  }

  .sun-icon { display: block; }
  .moon-icon { display: none; }

  :global(html.dark) .sun-icon { display: none; }
  :global(html.dark) .moon-icon { display: block; }
</style>
