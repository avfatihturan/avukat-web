---
interface Props {
  title: string;
  description: string;
  icon: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, icon, ctaText = "Detaylı Bilgi →", ctaLink = "/iletisim" } = Astro.props;

// Eğer JSON'dan sadece "gavel" gelirse "fa-solid fa-gavel" yap.
// Eğer zaten "fa-solid fa-gavel" geliyorsa olduğu gibi bırak.
const iconClass = icon.startsWith('fa-') ? icon : `fa-solid fa-${icon}`;
---

<a href={ctaLink} class="card-link">
  <div class="custom-card">
    <div class="card-icon">
      <i class={iconClass}></i>
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-desc">{description}</p>
    <div class="card-footer">
      <span>{ctaText} <i class="fa-solid fa-arrow-right"></i></span>
    </div>
  </div>
</a>

<style>
  .card-link { display: block; text-decoration: none; height: 100%; }
  .custom-card { background: #fff; border: 2px solid #e5e7eb; border-radius: 12px; padding: 2rem; height: 100%; display: flex; flex-direction: column; transition: 0.2s; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
  .custom-card:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(0,0,0,0.06); border-color: #d1d5db; }
  .card-icon { font-size: 2.5rem; color: #002B5B; text-align: center; margin-bottom: 1.5rem; }
  .card-title { font-size: 1.25rem; font-weight: 700; color: #111; text-align: center; margin-bottom: 1rem; }
  .card-desc { color: #444; line-height: 1.6; text-align: justify; flex-grow: 1; margin-bottom: 1.5rem; }
  .card-footer { border-top: 1px solid #f3f4f6; padding-top: 1rem; text-align: center; color: #002B5B; font-weight: 600; font-size: 0.9rem; }
</style>