const getPath = (name: string) => {
  if (!name) return icons.default;
  if (name.includes('gavel')) return icons.gavel;
  if (name.includes('gear')) return icons.gears;
  if (name.includes('house') || name.includes('home')) return icons.house;
  if (name.includes('building') || name.includes('skyscraper')) return icons.skyscraper;
  if (name.includes('globe')) return icons.globe;
  if (name.includes('shield')) return icons.shieldHeart;
  return icons.default;
};
---

<a href={ctaLink} class="card-link">
  <div class="custom-card">
    
    <div class="card-icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="54" height="54" fill="currentColor">
        <path d={getPath(icon)} />
      </svg>
    </div>

    <h3 class="card-title">{title}</h3>
    <p class="card-desc">{description}</p>

    <div class="card-footer">
      <span>{ctaText} 
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="14" height="14" fill="currentColor" style="display:inline; margin-left:5px;">
