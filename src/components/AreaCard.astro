---
interface Props {
  title: string;
  description: string;
  icon: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, icon, ctaText = "Detaylı Bilgi →", ctaLink = "/iletisim" } = Astro.props;
---

<a href={ctaLink} class="group block h-full">
  <div class="h-full bg-white rounded-xl p-8 shadow-sm border border-gray-100 transition-all duration-300 hover:shadow-xl hover:-translate-y-2 flex flex-col items-center">
    
    <div class="mb-5 text-primary text-4xl group-hover:scale-110 transition-transform duration-300">
      <i class={icon}></i>
    </div>

    <h3 class="text-xl font-bold text-[#1C1C1C] mb-4 text-center group-hover:text-primary transition-colors">
      {title}
    </h3>

    <p class="text-[#333333] font-normal leading-relaxed text-justify w-full mb-6">
      {description}
    </p>

    <div class="mt-auto pt-4 border-t border-gray-50 w-full flex justify-center">
      <span class="text-sm font-semibold text-primary flex items-center gap-2 group-hover:gap-3 transition-all">
        {ctaText} <i class="fa-solid fa-arrow-right text-xs"></i>
      </span>
    </div>
    
  </div>
</a>