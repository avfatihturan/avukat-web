---
interface Props {
  title: string;
  description: string;
  icon: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, icon, ctaText = "Detaylı Bilgi →", ctaLink = "/iletisim" } = Astro.props;
---

<a href={ctaLink} class="group block h-full">
  <div class="h-full bg-white rounded-lg p-6 md:p-8 shadow-sm border border-gray-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-md flex flex-col">
    
    <div class="mb-4 text-primary text-3xl group-hover:scale-110 transition-transform duration-300 flex justify-center">
      <i class={icon}></i>
    </div>

    <h3 class="text-xl font-semibold text-[#1C1C1C] mb-3 group-hover:text-primary transition-colors text-center">
      {title}
    </h3>

    <p class="text-[#333333] font-normal leading-relaxed text-justify flex-grow">
      {description}
    </p>

    <div class="mt-6 pt-4 border-t border-gray-50 flex justify-center">
      <span class="text-sm font-medium text-primary flex items-center gap-2 group-hover:gap-3 transition-all">
        {ctaText} <i class="fa-solid fa-arrow-right text-xs"></i>
      </span>
    </div>
    
  </div>
</a>