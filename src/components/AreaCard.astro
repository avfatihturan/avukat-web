---
interface Props {
  title: string;
  description: string;
  icon: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, icon, ctaText = "Detaylı Bilgi →", ctaLink = "/iletisim" } = Astro.props;
---

<a href={ctaLink} class="card-link">
  <div class="custom-card">
    
    <div class="card-icon">
      <i class={icon}></i>
    </div>

    <h3 class="card-title">
      {title}
    </h3>

    <p class="card-desc">
      {description}
    </p>

    <div class="card-footer">
      <span>{ctaText} <i class="fa-solid fa-arrow-right"></i></span>
    </div>
    
  </div>
</a>

<style>
  /* BU STİLLER DOSYAYA GÖMÜLÜDÜR, ÇALIŞMAMA İHTİMALİ YOKTUR */
  
  .card-link {
    display: block;
    text-decoration: none;
    height: 100%;
  }

  .custom-card {
    background-color: #ffffff;
    border: 2px solid #e5e7eb; /* Belirgin Gri Çerçeve */
    border-radius: 12px;
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .custom-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0,0,0,0.1);
    border-color: #d1d5db;
  }

  .card-icon {
    font-size: 2.5rem;
    color: #002B5B; /* Sizin koyu mavi tonunuz */
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111111;
    text-align: center; /* BAŞLIK KESİN ORTALI */
    margin-bottom: 1rem;
  }

  .card-desc {
    font-size: 1rem;
    color: #444444;
    line-height: 1.6;
    text-align: justify; /* METİN KESİN YASLI */
    flex-grow: 1; /* Metni alanı doldurmaya zorlar */
    margin-bottom: 1.5rem;
  }

  .card-footer {
    border-top: 1px solid #f3f4f6;
    padding-top: 1rem;
    text-align: center;
    color: #002B5B;
    font-weight: 600;
    font-size: 0.9rem;
  }
</style>