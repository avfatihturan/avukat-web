const getPath = (name: string) => {
  if (!name) return ICONS.default;
  const n = name.toLowerCase();
  
  // Gelen veriye göre doğru ikonu seç (Çoklu isim kontrolü)
  if (n.includes('gavel') || n === 'ceza') return ICONS.gavel;
  if (n.includes('gear') || n === 'is' || n === 'gears') return ICONS.gear;
  if (n.includes('house') || n.includes('home') || n === 'kira') return ICONS.house;
  if (n.includes('building') || n.includes('skyscraper') || n.includes('sirket') || n === 'sirketler') return ICONS.building;
  if (n.includes('globe') || n === 'uluslararasi') return ICONS.globe;
  if (n.includes('shield') || n.includes('siddet') || n.includes('kanun') || n.includes('6284')) return ICONS.shield;
  
  return ICONS.default;
};
---

<a class={`area-card ${variant === "compact" ? "compact" : ""}`} href={ctaLink}>
  <div class="icon-wrap" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor">
      <path d={getPath(icon)} />
    </svg>
  </div>

  <h3>{title}</h3>
  <p>{description}</p>

  <div class="card-footer">
    <span class="cta">{ctaText}</span>
  </div>
</a>

<style>
  .area-card {
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px; /* Premium yuvarlak köşeler */
    padding: 30px;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  /* PREMIUM HOVER EFFECTS */
  .area-card:hover {
    border-color: var(--brand-accent);
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
  }

  .icon-wrap {
    width: 64px;
    height: 64px;
    margin: 0 auto 18px;
    color: var(--brand-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    filter: drop-shadow(0 4px 6px rgba(197, 160, 89, 0.15));
    transition: transform 0.3s ease;
  }

  .area-card:hover .icon-wrap {
    transform: scale(1.1);
  }

  .icon-wrap svg {
    /* İkonları 48px'e sabitliyoruz, bozulma yok */
    width: 48px;
    height: 48px;
    display: block;
  }

  h3 {
    text-align: center;
    margin: 0 0 14px;
    font-size: 1.35rem;
    color: var(--brand-primary);
    font-weight: 700;
  }
  :global(html.dark) h3 { color: var(--color-text); }

  p {
    text-align: center;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.7;
    font-size: 0.95rem;
  }

  .card-footer {
    margin-top: auto;
    padding-top: 24px;
    border-top: 1px solid var(--color-border-soft);
  }
  :global(html.dark) .card-footer { border-top-color: rgba(255,255,255,0.08); }

  .cta {
    display: block;
    text-align: center;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--brand-primary);
    font-size: 0.85rem;
    transition: color 0.2s;
  }
  :global(html.dark) .cta { color: var(--brand-accent); }
  .area-card:hover .cta { color: var(--brand-accent); }

  .area-card.compact { padding: 24px; }
  .area-card.compact .icon-wrap { width: 56px; height: 56px; margin-bottom: 14px; }
  .area-card.compact .icon-wrap svg { width: 42px; height: 42px; }
</style>