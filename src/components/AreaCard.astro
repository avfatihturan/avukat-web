---
interface Props {
  title: string;
  description: string;
  icon: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, icon, ctaText = "Detaylı Bilgi →", ctaLink = "/iletisim" } = Astro.props;
---

<a href={ctaLink} class="group block h-full">
  <div class="h-full bg-white rounded-lg p-8 shadow-sm transition-all duration-300 hover:shadow-md hover:-translate-y-1 flex flex-col" style="border: 1px solid #E5E7EB;">
    
    <div class="mb-5 text-primary text-4xl group-hover:scale-110 transition-transform duration-300 flex justify-center">
      <i class={icon}></i>
    </div>

    <h3 class="text-xl font-bold text-[#1C1C1C] mb-4 group-hover:text-primary transition-colors text-center">
      {title}
    </h3>

    <p class="text-[#333333] font-normal leading-relaxed flex-grow" style="text-align: justify;">
      {description}
    </p>

    <div class="mt-6 pt-4 flex justify-center" style="border-top: 1px solid #F3F4F6;">
      <span class="text-sm font-semibold text-primary flex items-center gap-2 group-hover:gap-3 transition-all">
        {ctaText} <i class="fa-solid fa-arrow-right text-xs"></i>
      </span>
    </div>
    
  </div>
</a>