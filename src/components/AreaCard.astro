---
interface Props {
  title: string;
  description: string;
  icon: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, icon, ctaText = "Detaylı Bilgi →", ctaLink = "/iletisim" } = Astro.props;
---

<a href={ctaLink} class="group block h-full">
  <div class="h-full bg-white rounded-lg p-6 md:p-8 shadow-sm border border-gray-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-md flex flex-col">
    
    <div class="mb-4 text-primary text-3xl">
      <i class={icon}></i>
    </div>

    <h3 class="text-[1.25rem] font-semibold text-[#1C1C1C] mb-3 group-hover:text-primary transition-colors">
      {title}
    </h3>

    <p class="text-[#333333] font-normal leading-relaxed flex-grow">
      {description}
    </p>

    <div class="mt-6 pt-4 border-t border-gray-50">
      <span class="text-sm font-medium text-primary flex items-center gap-2 group-hover:translate-x-1 transition-transform">
        {ctaText}
      </span>
    </div>
    
  </div>
</a>